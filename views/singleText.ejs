<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/svg+xml" href="/img/logo.PNG">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>code</title>
    <link rel="stylesheet" href="/css/text.css">
    <link rel="stylesheet" href="/css/style.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="loading-spinner" id="loadingSpinner"></div>

            <div class="header">
                <input type="text" name="title" id="title" value="<%= text.title %>" readonly>
                <a href="/" style="text-decoration: none;"><span> Cancel <i class="fas fa-times"></i></span></a>
            </div>
            <div class="textarea">
                <textarea name="text" cols="5" rows="25" readonly><%= text.text %></textarea>
            </div>
            <footer>
                <button onclick="copyToClipboard('<%= text.text %>')">copy</button>
                <button type="submit" style="background-color: green;" onclick="location.href='/text'">New</button>
            </footer>
    
    </div>
    <script src="/script/loader.js"></script>
    <%- include('component/messageBox') %>
    <script>
        const msgBox = document.querySelector(".msg");
        setTimeout(() => {
          msgBox.remove();
          }, 3000);
    </script>
    <script>
         const a = document.getElementsByTagName('a');
        a.addEventListener("click",()=>{
            document.getElementById("loadingSpinner").style.display= "block";
        })
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                console.log('Link copied to clipboard!');
            }).catch(err => {
                console.error('Failed to copy link:', err);
            });
        }
    </script>
</body>


</html>
