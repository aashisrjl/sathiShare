<body>
   <h1>Keep Sharing Guys üòÅüòé</h1>
    <div class="container">
        <% if (files.length > 0) { %>
            <ul class="file-list">
                <% files.forEach(file => { %>
                    <li>
                        <span><%= file.file.slice(14) %></span>
                        <div>
                            <a href="/storage/<%= file.file %>" class="copy-link" download>Download</a>
                            <a href="/storage/<%= file.file %>" target="_blank" class="visit-link">Visit</a>                            
                            <a  style="background-color: red; color: white; border-radius: 50%;" href="/file/delete/<%= file._id %>"  class="visit-link"><i class="fas fa-times"></i></a>

                            
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No files found for this user ID.</p>
        <% } %>
        <ul style="border-radius: 20px; list-style: none; text-align: center; margin-left: 30%; margin-right: 20%; ">
            <li  class="new"><a style="background-color: blue; color: white;" href="/"> Share Another</a></li>
        </ul>
    </div>

